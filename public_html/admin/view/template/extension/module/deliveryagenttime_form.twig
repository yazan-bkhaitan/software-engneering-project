{{ header }}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
{{ column_left }}
<div id="content">
   <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-danger"><i class="fa fa-reply"></i></a>
      </div>
      <h1><i style="color:#46696B;" class="fa fa-clock-o" aria-hidden="true"></i> {{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
     <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_timerange }}</h3>
      </div>
      <div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-date-start">{{ text_time }}</label>
              <div class="col-sm-3">
                <div class="input-group">
                  <input type="text" name="time" value="{{ time }}" placeholder="{{ text_time }}"  id="input-date-start" class="form-control" />
                  <!-- <span class="input-group-btn">
                  <button type="button" class="btn btn-default"><i class="fa fa-clock-o"></i></button>
                  </span> -->
                  </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-date-end">{{ text_notes }}</label>
              <div class="col-sm-3">
                <div class="input-group">
                  <input type="text" name="notes" value="{{ notes }}" placeholder="{{ text_notes }}" id="input-date-end" class="form-control" />
                  <!-- <span class="input-group-btn">
                  <button type="button" class="btn btn-default"><i class="fa fa-clock-o"></i></button>
                  </span> -->
                  </div>
              </div>
            </div>
      </form>
    </div>
  </div>
</div>
</div>
{{ footer }}
